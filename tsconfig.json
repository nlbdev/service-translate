{
    "compilerOptions": {
        "outDir": "./dist/",
        //"sourceMap": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "types": ["node"],
        "typeRoots" : ["./node_modules/@types"],
        
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "/node_modules/",
        "/dist/"
    ]
}